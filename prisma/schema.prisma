generator client {
  provider = "prisma-client-js"
  output   = "../.prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Key {
  id  Int    @id @default(autoincrement())
  key String @unique
  discordId String

  @@unique([key, discordId])
  @@map("keys")
}

model Platform {
  id Int @id @default(autoincrement())
  name String @unique

  @@map("platforms")
}